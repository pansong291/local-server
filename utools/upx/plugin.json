{
  "pluginName": "Local Server",
  "description": "使用 Http 协议创建本地静态资源服务器",
  "version": "1.0.4",
  "author": "paso",
  "main": "web/index.html",
  "preload": "index.js",
  "logo": "logo.png",
  "development": {
    "main": "http://localhost:10987"
  },
  "pluginSetting": {
    "single": true
  },
  "features": [
    {
      "code": "launcher",
      "explain": "打开主面板",
      "icon": "",
      "cmds": [
        "Local Server",
        "本地服务"
      ]
    },
    {
      "code": "add-server",
      "explain": "添加服务",
      "icon": "",
      "cmds": [
        {
          "type": "files",
          "label": "加入服务列表",
          "fileType": "directory",
          "minLength": 1
        },
        {
          "type": "window",
          "label": "添加当前目录",
          "match": {
            "app": ["explorer.exe", "Finder.app"]
          }
        }
      ]
    }
  ]
}
